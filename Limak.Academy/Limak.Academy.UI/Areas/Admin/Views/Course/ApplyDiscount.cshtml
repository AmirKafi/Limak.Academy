@using Limak.Academy.Framework.Core.Enum;
@model Limak.Academy.Application.Contract.Dto.Discounts.ApplyDiscountDto
@{
    ViewBag.Title = "اختصاص تخفیف";
}
<div class="course-create">
    <div class="card">
        <div class="card-body">
            <form autocomplete="off" action="@Url.Action("ApplyDiscount","Course")">
                <input asp-for="CourseId" hidden />
                <div class="row">
                    <div class="col-md-12">
                        <div class="form-group">
                            <label asp-for="DiscountId" class="form-label"></label><b class="text-danger">*</b>
                            <select asp-for="DiscountId" class="form-control selectpicker" asp-items="Model.Discounts"></select>
                            <span class="field-validation-valid text-danger" asp-validation-for="DiscountId"></span>
                        </div>
                    </div>
                </div>
            </form>
        </div>
    </div>
</div>