@{
    ViewBag.Title = "لیست دوره";
}
<meta name="viewport" content="width=device-width, initial-scale=1.0">
<div class="container-fluid">
    <div class="card">
        <div class="card-body">
            <div class="row">
                <div class="col-md-12">
                    <div id="toolbar">
                        <a href="javascript:void(0)" data-url="@Url.Action("Create","Course")" class="btn btn-outline-success m-1 createItem"><span class="glyphicon glyphicon-plus"></span> افزودن</a>
                        <a href="javascript:void(0)" data-url="@Url.Action("Edit","Course")" class="btn btn-outline-warning m-1 editItem"><span class="glyphicon glyphicon-pencil"></span> ویرایش</a>
                        <a href="javascript:void(0)" data-url="@Url.Action("Delete","Course")" class="btn btn-outline-danger m-1 deleteItem"><span class="glyphicon glyphicon-remove"></span> حذف</a>
                        <a href="javascript:void(0)" data-url="" class="btn btn-outline-dark m-1 refresh"><span class="glyphicon glyphicon-refresh"></span> بروزرسانی</a>
                    </div>
                    <table class="table text-nowrap mb-0 align-middle"
                           data-toolbar="#toolbar"
                           data-toggle="table"
                           data-striped="true"
                           data-show-refresh="false"
                           data-id-field="id"
                           data-height="420"
                           data-click-to-select="true"
                           data-side-pagination="server"
                           data-pagination="true"
                           data-buttons-align="right"
                           data-single-select="true"
                           data-toolbar-align="right"
                           data-naseri-additional-params="window.courseAdditionalParams"
                           data-ajax="window.ajaxRequest"
                           data-response-handler="window.responseHandler"
                           data-apply-discount-url="@Url.Action("ApplyDiscount","Course")"
                           data-remove-discount-url="@Url.Action("RemoveDiscount","Course")"
                           data-url="@Url.Action("LoadCourses","Course")">
                        <thead>
                            <tr>
                                <th data-field="state" data-width="1" data-checkbox="true" data-halign="center" data-align="center"></th>
                                <th data-field="rowNumber" data-width="1000">ردیف</th>
                                <th data-field="title" data-width="1000">عنوان دوره</th>
                                <th data-field="teacherName" data-width="1000">مدرس</th>
                                <th data-field="categoryTitle" data-width="1000">دسته بندی</th>
                                <th data-field="courseTypeTitle" data-width="1000">نوع دوره</th>
                                <th data-field="price" data-formatter="window.separateThreeDigit" data-width="1000">قیمت</th>
                                <th data-field="description" data-width="1000">توضیحات</th>
                                <th data-field="createdOnFa" data-width="1000">تاریخ ثبت</th>
                                <th data-field="filePath" data-width="1000" data-formatter="window.showImageFormatter" data-events="window.showImageEvents">تصویر</th>
                                <th data-field="discountPrice" data-width="1000" data-formatter="window.separateThreeDigit">مقدار تخفیف</th>
                                <th data-field="id" data-width="1000" data-formatter="window.courseDiscountFormatter" data-events="window.courseDiscountEvents">تخفیف</th>
                            </tr>
                        </thead>
                    </table>
                </div>
            </div>
        </div>
    </div>
</div>