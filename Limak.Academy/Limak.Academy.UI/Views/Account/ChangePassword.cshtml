@model Limak.Academy.Application.Contract.Dto.Users.ChangePasswordDto
@{
    ViewData["Title"] = "ChangePassword";
}


<div id="main-wrapper">

    <!-- ========================== SignUp Elements ============================= -->
    <section class="log-space">
        <div class="container">
            <div class="row justify-content-center">
                <div class="col-lg-12 col-md-12 position-static p-4">
                    <form method="post" action="@Url.Action("ChangePassword","Account")">
                        <input asp-for="UserId" hidden />
                        <div class="log_wraps">
                            <div class="form-group">
                                <label asp-for="OldPassword" class="form-label"></label>
                                <input asp-for="OldPassword" type="password" class="form-control password">
                            </div>

                            <div class="form-group">
                                <label asp-for="NewPassword"></label>
                                <input asp-for="NewPassword" type="password" class="form-control password">
                            </div>

                            <div class="form-group">
                                <label asp-for="ConfirmNewPassword"></label>
                                <input asp-for="ConfirmNewPassword" type="password" class="form-control password">
                            </div>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </section>
    <!-- ========================== Login Elements ============================= -->
</div>


