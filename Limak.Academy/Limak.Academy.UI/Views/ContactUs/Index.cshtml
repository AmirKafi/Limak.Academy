@using Limak.Academy.Application.Contract.Dto.Messages;
@{
    ViewBag.Title = "تماس با ما";
}
@model Limak.Academy.Application.Contract.Dto.Configs.ConfigDto

<section class="page-title">
    <div class="container">
        <div class="row">
            <div class="col-lg-12 col-md-12">

                <div class="breadcrumbs-wrap">
                    <h1 class="breadcrumb-title">تماس با ما</h1>
                    <nav aria-label="breadcrumb">
                        <ol class="breadcrumb">
                            <li class="breadcrumb-item"><a href="/">خانه</a></li>
                            <li class="breadcrumb-item active" aria-current="page">تماس با ما</li>
                        </ol>
                    </nav>
                </div>

            </div>
        </div>
    </div>
</section>
<section class="bg-light">

    <div class="container">

        <!-- row Start -->
        <div class="row">

            <div class="col-lg-8 col-md-7">
                <div class="prc_wrap">

                    <div class="prc_wrap_header">
                        <h4 class="property_block_title">ارسال پیام</h4>
                    </div>

                    <form method="post" autocomplete="off" action="@Url.Action("SendMessage")">
                        <div class="prc_wrap-body send-message">
                            <div class="form-group">
                                <label>عنوان</label>
                                <input type="text" name="Title" id="Title" class="form-control simple">
                            </div>

                            <div class="form-group">
                                <label>پیام</label>
                                <textarea class="form-control simple" name="MessageBody" id="MessageBody"></textarea>
                            </div>

                            <div class="form-group">
                                <button class="btn btn-theme btn-sendMessage" type="submit">ارسال درخواست</button>
                            </div>
                        </div>
                    </form>

                </div>

            </div>

            <div class="col-lg-4 col-md-5">

                <div class="prc_wrap">

                    <div class="prc_wrap_header">
                        <h4 class="property_block_title">راه های ارتباطی</h4>
                    </div>

                    <div class="prc_wrap-body">
                        <div class="contact-info">

                            <div class="cn-info-detail">
                                <div class="cn-info-icon">
                                    <i class="ti-home" style="padding:2px"></i>
                                </div>
                                <div class="cn-info-content">
                                    <h4 class="cn-info-title">آدرس ما</h4>
                                    @Model.Address
                                </div>
                            </div>

                            <div class="cn-info-detail">
                                <div class="cn-info-icon">
                                    <i class="ti-email"></i>
                                </div>
                                <div class="cn-info-content">
                                    <h4 class="cn-info-title">پست الکترونیکی</h4>
                                    @Model.Email
                                </div>
                            </div>

                            <div class="cn-info-detail">
                                <div class="cn-info-icon">
                                    <i class="ti-mobile"></i>
                                </div>
                                <div class="cn-info-content">
                                    <h4 class="cn-info-title">شماره تماس</h4>
                                    @Model.ContactNumber
                                </div>
                            </div>

                        </div>
                        <div>
                            <ul style="display:inline-flex">
                                <li>
                                    <a href="@Model.TelegramLink" target="_blank">
                                        <i class="fab fa-telegram" tabindex="0"></i>
                                    </a>
                                </li>
                                <li>
                                    <a href="@Model.InstagramLink" target="_blank">
                                        <i class="fab fa-instagram" tabindex="0"></i>
                                    </a>
                                </li>
                            </ul>
                        </div>
                    </div>
                </div>

            </div>
            <!-- /row -->

        </div>

</section>

