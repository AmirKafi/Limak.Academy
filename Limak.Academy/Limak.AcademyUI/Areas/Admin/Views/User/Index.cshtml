@{
    ViewBag.Title = "لیست دوره";
}
<meta name="viewport" content="width=device-width, initial-scale=1.0">
<div class="container-fluid">
    <div class="card">
        <div class="card-body">
            <div class="row">
                <div class="col-md-12">
                    <div id="toolbar">
                        <a href="javascript:void(0)" data-url="@Url.Action("Create","User")" class="btn btn-outline-success m-1 createItem"><span class="glyphicon glyphicon-plus"></span> افزودن</a>
                        <a href="javascript:void(0)" data-url="@Url.Action("Edit","User")" class="btn btn-outline-warning m-1 editItem"><span class="glyphicon glyphicon-pencil"></span> ویرایش</a>
                        <a href="javascript:void(0)" data-url="@Url.Action("Delete","User")" class="btn btn-outline-danger m-1 deleteItem"><span class="glyphicon glyphicon-remove"></span> حذف</a>
                        <a href="javascript:void(0)" data-url="" class="btn btn-outline-dark m-1 refresh"><span class="glyphicon glyphicon-refresh"></span> بروزرسانی</a>
                    </div>
                    <table class="table text-nowrap mb-0 align-middle"
                           data-toolbar="#toolbar"
                           data-toggle="table"
                           data-striped="true"
                           data-show-refresh="false"
                           data-id-field="id"
                           data-height="420"
                           data-click-to-select="true"
                           data-side-pagination="server"
                           data-pagination="true"
                           data-buttons-align="right"
                           data-single-select="true"
                           data-toolbar-align="right"
                           data-naseri-additional-params="window.userAdditionalParams"
                           data-ajax="window.ajaxRequest"
                           data-response-handler="window.responseHandler"
                           data-promote-url="@Url.Action("PromoteToAdmin","User")"
                           data-url="@Url.Action("LoadUsers","User")">
                        <thead>
                            <tr>
                                <th data-field="state" data-width="1" data-checkbox="true" data-halign="center" data-align="center"></th>
                                <th data-field="rowNumber" data-width="1000">ردیف</th>
                                <th data-field="userName" data-width="1000">نام کاربری</th>
                                <th data-field="firstName" data-width="1000">نام</th>
                                <th data-field="lastName" data-width="1000">نام خانوادگی</th>
                                <th data-field="phoneNumber" data-width="1000">شماره موبایل</th>
                                <th data-field="email" data-width="1000">ایمیل</th>
                                <th data-field="roleTitle" data-width="1000">نقش</th>
                                <th data-field="isActiveTitle" data-width="1000">وضعیت</th>
                                <th data-field="createdOnFa" data-width="1000">تاریخ ثبت</th>
                                <th data-field="role" data-width="1000" data-formatter="window.promoteToAdminFormatter" data-events="window.promoteToAdminEvents">ارتقا به ادمین</th>
                            </tr>
                        </thead>
                    </table>
                </div>
            </div>
        </div>
    </div>
</div>