@using Limak.Academy.Domain.Enums;
@{
    ViewData["Title"] = "جست و جو";
}
@model Limak.Academy.Application.Contract.Dto.HomeItemsDto

<section class="page-title">
    <div class="container">
        <div class="row">
            <div class="col-lg-12 col-md-12">
                <div class="breadcrumbs-wrap">
                    <h1 class="breadcrumb-title">جست و جو</h1>
                    <nav aria-label="breadcrumb">
                        <ol class="breadcrumb">
                            <li class="breadcrumb-item"><a href="#">موارد منطبق با "@Model.SearchText"</a></li>
                        </ol>
                    </nav>
                </div>
            </div>
        </div>
    </div>
</section>
<section class="gray-bg">
   @*  @if (Model.Categories.Count > 0)
