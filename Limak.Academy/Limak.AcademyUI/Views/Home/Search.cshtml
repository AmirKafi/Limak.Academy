    <!-- ========================== Featured Category Section =============================== -->
    <!-- ============================ Featured Courses Start ================================== -->
    @if (Model.Courses.Count > 0)
    {
        <section class="gray-bg">
            <div class="container">

                <div class="row justify-content-center">
                    <div class="col-lg-5 col-md-6 col-sm-12">
                        <div class="sec-heading center">
                            <p>@Model.Courses.Count دوره پیدا شد!</p>
                        </div>
                    </div>
                </div>

                <div class="row">

                    @await Html.PartialAsync("_Courses", Model.Courses)

                </div>

            </div>
        </section>
    }
    <!-- ============================ Featured Courses End ================================== -->
    <!-- ============================ Featured Instructor Start ================================== -->
    @if (Model.Teachers.Count > 0)
    {
        <section class="bg-light min-sec">
            <div class="container">

                <div class="row justify-content-center">
                    <div class="col-lg-5 col-md-6 col-sm-12">
                        <div class="sec-heading center">
                            <p>@Model.Teachers.Count مدرس پیدا شد!</p>
                        </div>
                    </div>
                </div>

                <div class="row">
                    <div class="col-lg-12 col-md-12 col-sm-12">

                        <div class="four_slide-dots articles arrow_middle" dir="rtl">

                            @await Html.PartialAsync("_Teachers", Model.Teachers)

                        </div>

                    </div>
                </div>

            </div>
        </section>
    }
    <!-- ============================ Featured Instructor End ================================== -->
    <!-- ========================== Articles Section =============================== -->
    @if (Model.Blogs.Count > 0)
    {
        <br />
        <section class="pt-0">
            <div class="container">

                <div class="row justify-content-center">
                    <div class="col-lg-12 col-md-12">
                        <div class="sec-heading-flex" style="justify-content:center">
                            <p>@Model.Blogs.Count مطلب پیدا شد!</p>
                        </div>
                    </div>
                </div>

                <div class="row">

                    @await Html.PartialAsync("_Blogs", Model.Blogs)

                </div>
            </div>
        </section>
    }
</section>