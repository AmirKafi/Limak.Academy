@model List<Limak.Academy.Application.Contract.Dto.Category.CategoryListDto>
@{
    Random rnd = new Random();
}

<div class="row">
    @foreach (var item in Model)
    {
        <div class="col-lg-4 col-md-4 col-sm-6">
            <div class="edu_cat_2 cat-@rnd.Next(1,11)">
                <div class="edu_cat_icons">
                    <a class="pic-main" href="#"><img src="TemplateAssets/img/content.png" class="img-fluid" alt="" /></a>
                </div>
                <div class="edu_cat_data">
                    <h4 class="title"><a href="#">@item.Title</a></h4>
                    <ul class="meta">
                        <li class="video"><i class="ti-video-clapper"></i>@item.Count دوره آموزشی</li>
                    </ul>
                </div>
            </div>
        </div>
    }
</div>